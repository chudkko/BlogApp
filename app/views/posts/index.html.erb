<h1>List of posts</h1>
<% @posts.each do |post| %>
	<h2>
		<%= post.content %>
	</h2>
	<p>
		<%= post.text %>
	</p>

	<p>
		<%= link_to 'Show', article_path(post) %> |
		<%= link_to 'Edit', edit_article_path(post) %> | 
		<%= link_to 'Delete', article_path(post), method: :delete, data: { confirm: 'Are you Sure?' } %>
	</p>

	<hr/>
<% end %>